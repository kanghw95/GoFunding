		SELECT * FROM BULLETINEBOARD WHERE
		BOARD_TITLE LIKE '%'|| #{keyword} ||'%' OR BOARD_CONTENT LIKE '%'||
		#{keyword} ||'%'
		ORDER BY REGDATE DESC
	</select>
	
	
	
